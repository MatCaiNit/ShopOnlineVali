@model ThucHanhWebMVC.Models.TKichThuoc
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ThemKichThuoc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thêm Kích Thước</h1>

<h4>Kích Thước</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="ThemKichThuoc">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaKichThuoc" class="control-label"></label>
                <input asp-for="MaKichThuoc" class="form-control" />
